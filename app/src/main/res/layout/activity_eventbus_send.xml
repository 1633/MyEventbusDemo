<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_eventbus_send"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eventbus.demo.EventbusSendActivity">

    <Button
        android:id="@+id/id_eventbus_send_btn_send"
        android:text="主线程发送数据"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/id_eventbus_send_btn_sticky"
        android:text="接受粘性数据"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="显示结果"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/id_eventbus_send_tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
